@page
@model BookStore_Mock_Project.Pages.Admin.User_Page.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>


@{
    if(TempData["Notify"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@TempData["Notify"]!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}


<div class="container mt-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">List user</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2.Name" aria-selected="false">Deleted</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.User)
                    {
                        if (item.Status == true)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role.Name)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-secondary">Edit</a> 
                                    <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a> 
                                    <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User[0].Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.User)
                    {
                        if (item.Status == false)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role.Name)
                                </td>
                                <td>
                                    <a asp-page="./Restore" asp-route-id="@item.UserId" class="btn btn-secondary">Restore</a> 
                                    <a asp-page="./PermDelete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


