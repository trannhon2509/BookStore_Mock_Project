@page
@model BookStore_Mock_Project.Pages.Admin.Categories_Page.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookCategory.CategoryId" />
            <div class="form-group">
                <label asp-for="BookCategory.Name" class="control-label"></label>
                <input asp-for="BookCategory.Name" class="form-control" />
                <span asp-validation-for="BookCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookCategory.Description" class="control-label"></label>
                <input asp-for="BookCategory.Description" class="form-control" />
                <span asp-validation-for="BookCategory.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BookCategory.Status" /> @Html.DisplayNameFor(model => model.BookCategory.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
